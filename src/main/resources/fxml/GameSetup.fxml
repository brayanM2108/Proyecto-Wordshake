<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="600" prefWidth="800" style="-fx-background-color: linear-gradient(to bottom, #1f3b4d, #326489);" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.poli.WordShake.controller.GameSetupController">

    <!-- Contenedor principal -->
    <VBox alignment="CENTER" layoutX="100" layoutY="30" spacing="30.0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">

        <!-- Título de dificultad -->
        <Label style="-fx-font-size: 40px; -fx-font-weight: bold; -fx-text-fill: white; -fx-effect: dropshadow(gaussian, black, 4, 0, 2, 2);" text="SELECCIONAR DIFICULTAD" />

        <!-- Botones de dificultad -->
        <HBox alignment="CENTER" spacing="40.0">
            <Button fx:id="btnEasy" prefHeight="40" prefWidth="120" style="-fx-background-color: #2B3E50; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;" text="Facil" />
            <Button fx:id="btnNormal" prefHeight="40" prefWidth="120" style="-fx-background-color: #3D5368; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;" text="Normal" />
            <Button fx:id="btnHard" prefHeight="40" prefWidth="120" style="-fx-background-color: #4A6A80; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;" text="Dificil" />
        </HBox>

        <!-- Título modos de juego -->
        <Label style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: white; -fx-effect: dropshadow(gaussian, black, 4, 0, 2, 2);" text="SELECCIONAR MODO DE JUEGO" />

        <!-- Botones de modo de juego -->
        <VBox alignment="CENTER" spacing="12.0">
            <Button fx:id="btnMode1" prefHeight="40" prefWidth="200" style="-fx-background-color: #2B3E50; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;" text="Clasico" />
            <Button fx:id="btnMode2" prefHeight="40" prefWidth="200" style="-fx-background-color: #2B3E50; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;" text="Posicion" />
            <Button fx:id="btnMode3" prefHeight="40" prefWidth="200" style="-fx-background-color: #2B3E50; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;" text="Equipo" />
            <Button fx:id="btnMode4" prefHeight="40" prefWidth="200" style="-fx-background-color: #2B3E50; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;" text="Liga" />
            <Button fx:id="btnMode5" prefHeight="40" prefWidth="200" style="-fx-background-color: #2B3E50; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;" text="Tres Ligas" />
            <Button fx:id="btnMode6" prefHeight="40" prefWidth="200" style="-fx-background-color: #2B3E50; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;" text="Entrenamiento" />
        </VBox>

        <!-- Botón de comenzar juego -->
        <Button fx:id="btnStartGame" onAction="#onStartGame" prefHeight="50" prefWidth="200" style="-fx-background-color: #28A745; -fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold; -fx-background-radius: 8;" text="Comenzar Juego" />

    </VBox>

</AnchorPane>
